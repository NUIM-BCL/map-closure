(define (set-in n v c)
 (cond ((procedure? c)
	(map-closure (lambda (n1 v1) (set-in n v (if (name=? n n1) v v1))) c))
       ((pair? c) (cons (set-in n v (car c)) (set-in n v (cdr c))))
       (else c)))

(define (set n v)
 (call-with-current-continuation (lambda (c) ((set-in n v c) #f))))
